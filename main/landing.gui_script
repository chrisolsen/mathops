function init(self)
    msg.post('.', 'acquire_input_focus')
end

function on_input(self, action_id, action)
	if hash('touch') == action_id and action.pressed then
		local btn_play = gui.get_node('play/button')
		if gui.pick_node(btn_play, action.x, action.y) then
			msg.post('default:/root#main', 'load:game')
			msg.post("#", "disable")
		end
	end
end
